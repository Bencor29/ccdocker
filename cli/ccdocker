local docker = loadfile("/docker/docker.lua")()
local json = loadfile("/docker/json.lua")()
local Args = {...}
local image = Args[1]

-- verify it exists
if fs.exists(tostring(image)) == false then
 error("image fs not found")
end

docker.chroot(docker, image)
